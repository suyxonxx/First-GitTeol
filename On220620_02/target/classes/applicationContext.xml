	</bean>
	<bean id="tv2" class="polymorphism.LgTV">
		<!-- <constructor-arg ref="apple"></constructor-arg> --><!-- ref : 객체 넣기 -->
		<!-- <constructor-arg value="500" type="int"></constructor-arg> --><!-- value : 값 넣기 -->
	</bean>
	<bean id="tv3" class="polymorphism.SonyTV"/>
